{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES2022",
    "paths": {
      "@yao/*": ["./scripts/__types/*"],
      "@lib/*": ["./scripts/lib/*"],
      "@scripts/*": ["./scripts/*"]
    },
    "lib": ["ESNEXT", "DOM"],
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true
  },
  "exclude": ["node_moudles", "dist"],
  "include": ["./scripts/**/*", "./services/**/*", "./studio/**/*"]
}
