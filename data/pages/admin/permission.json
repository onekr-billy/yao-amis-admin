{
  "body": [
    {
      "api": {
        "data": {
          "&": "$$"
        },
        "method": "post",
        "url": "/api/v1/system/model/admin.auth.permission/search?page=${page}&perPage=${perPage}&orderBy=${orderBy}&orderDir=${orderDir}"
      },
      "autoFillHeight": true,
      "bulkActions": [
        {
          "actionType": "ajax",
          "api": "delete:/api/v1/system/model/admin.auth.permission/delete/${ids|raw}",
          "confirmText": "你确定要批量删除选中行吗?",
          "label": "批量删除",
          "type": "button"
        }
      ],
      "columns": [
        {
          "label": "ID",
          "name": "id",
          "quickEdit": false,
          "searchable": true,
          "sortable": true,
          "type": "number"
        },
        {
          "label": "名称",
          "name": "name",
          "searchable": true,
          "sortable": true,
          "type": "text"
        },
        {
          "label": "描述",
          "name": "desc",
          "searchable": true,
          "sortable": true,
          "type": "text"
        },
        {
          "label": "文件目录",
          "name": "folders",
          "type": "each",
          "items": {
            "type": "tag",
            "label": "${item.folder.value|json}"
          }
        },
        {
          "label": "路由",
          "levelExpand": 0,
          "name": "routes",
          "type": "each",
          "items": {
            "type": "tag",
            "label": "${item.route|json}"
          },
          "searchable": true,
          "sortable": true
        },
        {
          "label": "模型",
          "levelExpand": 0,
          "name": "models",
          "type": "each",
          "items": {
            "type": "tag",
            "label": "${item.model|json}"
          },
          "searchable": true,
          "sortable": true
        },
        {
          "buttons": [
            {
              "actionType": "dialog",
              "dialog": {
                "body": {
                  "api": "post:/api/v1/system/model/admin.auth.permission/bulkUpdate/$id",
                  "body": [
                    {
                      "label": "名称",
                      "name": "name",
                      "required": true,
                      "type": "input-text"
                    },
                    {
                      "label": "描述",
                      "name": "desc",
                      "required": true,
                      "type": "input-text"
                    },
                    {
                      "label": "上级",
                      "name": "parent",
                      "type": "tree-select",
                      "source": "/api/v1/system/tree/admin.auth.permission/find?_label=desc"
                    },
                    {
                      "label": "菜单",
                      "name": "menus",
                      "searchable": true,
                      "multiple": true,
                      "type": "tree-select",
                      "labelField": "title",
                      "valueField": "id",
                      "autoCheckChildren": false,
                      "joinValues": false,
                      "extractValue": true,
                      "source": "/api/v1/system/tree/admin.menu/find?_label=title"
                    },
                    {
                      "name": "routes",
                      "type": "combo",
                      "label": "路由",
                      "multiple": true,
                      "items": [
                        {
                          "name": "route",
                          "type": "select",
                          "joinValues": false,
                          "extractValue": true,
                          "unique": true,
                          "source": "/api/v1/system/model/system.api/select_options?_label=router&_value=router"
                        },
                        {
                          "type": "checkboxes",
                          "name": "operation",
                          "label": "请求方式",
                          "disabledOn": "!this.route",
                          "options": [
                            {
                              "value": "GET",
                              "label": "GET"
                            },
                            {
                              "value": "POST",
                              "label": "POST"
                            },
                            {
                              "value": "PUT",
                              "label": "PUT"
                            },
                            {
                              "value": "DELETE",
                              "label": "DELETE"
                            },
                            {
                              "value": "PATCH",
                              "label": "PATCH"
                            },
                            {
                              "value": "OPTIONS",
                              "label": "OPTIONS"
                            },
                            {
                              "value": "HEAD",
                              "label": "HEAD"
                            }
                          ],
                          "description": "不选则为ANY",
                          "joinValues": false,
                          "extractValue": true
                        }
                      ]
                    },
                    {
                      "name": "models",
                      "type": "combo",
                      "label": "模型",
                      "multiple": true,
                      "items": [
                        {
                          "name": "model",
                          "type": "select",
                          "joinValues": false,
                          "extractValue": true,
                          "unique": true,
                          "source": "/api/v1/system/model/ddic.model/select_options?_value=identity&_label=name"
                        },
                        {
                          "type": "checkboxes",
                          "name": "operation",
                          "disabledOn": "!this.model",
                          "options": [
                            {
                              "label": "读取",
                              "value": "READ"
                            },
                            {
                              "label": "修改",
                              "value": "UPDATE"
                            },
                            {
                              "label": "创建",
                              "value": "CREATE"
                            },
                            {
                              "label": "删除",
                              "value": "DELETE"
                            }
                          ],
                          "description": "不选则为ANY",
                          "joinValues": false,
                          "extractValue": true
                        }
                      ]
                    },
                    {
                      "name": "folders",
                      "type": "combo",
                      "label": "文件目录",
                      "multiple": true,
                      "items": [
                        {
                          "name": "folder",
                          "searchable": true,
                          "type": "tree-select",
                          "autoCheckChildren": false,
                          "joinValues": false,
                          "extractValue": true,
                          "source": "/api/v1/fs/file/permission_tree",
                          "unique": true
                        },
                        {
                          "type": "checkboxes",
                          "name": "operation",
                          "disabledOn": "!this.folder",
                          "options": [
                            {
                              "label": "读取",
                              "value": "READ"
                            },
                            {
                              "label": "修改",
                              "value": "UPDATE"
                            },
                            {
                              "label": "创建",
                              "value": "CREATE"
                            },
                            {
                              "label": "删除",
                              "value": "DELETE"
                            }
                          ],
                          "description": "不选则为ANY",
                          "joinValues": false,
                          "extractValue": true
                        }
                      ]
                    }
                  ],
                  "name": "update",
                  "silentPolling": false,
                  "trimValues": true,
                  "type": "form"
                },
                "size": "lg",
                "title": "更新",
                "type": "dialog"
              },
              "icon": "fa fa-pencil",
              "tooltip": "更新",
              "type": "button"
            },
            {
              "actionType": "ajax",
              "api": "delete:/api/v1/system/model/admin.auth.permission/delete/$id",
              "confirmText": "你确定要删除行${id}?",
              "icon": "fa fa-times text-danger",
              "tooltip": "删除",
              "type": "button"
            }
          ],
          "label": "操作",
          "type": "operation",
          "width": 100
        }
      ],
      "filter": {
        "actions": [
          {
            "actionType": "clear-and-submit",
            "label": "清空",
            "level": "default",
            "type": "button"
          },
          {
            "actionType": "reset-and-submit",
            "label": "重置",
            "level": "default",
            "type": "button"
          },
          {
            "actionType": "submit",
            "label": "搜索",
            "level": "primary",
            "type": "button"
          }
        ],
        "body": [
          {
            "label": "ID",
            "name": "id",
            "type": "input-number"
          },
          {
            "label": "名称",
            "name": "name",
            "type": "input-text"
          },
          {
            "label": "描述",
            "name": "desc",
            "type": "input-text"
          },
          {
            "label": "上级",
            "name": "parent",
            "type": "tree-select",
            "source": "/api/v1/system/tree/admin.auth.permission/find?_label=desc"
          },
          {
            "label": "排序",
            "name": "order",
            "type": "input-number"
          }
        ],
        "mode": "inline",
        "name": "list",
        "silentPolling": false,
        "title": "",
        "trimValues": true,
        "type": ""
      },
      "filterDefaultVisible": false,
      "filterTogglable": true,
      "footerToolbar": [
        "statistics",
        "switch-per-page",
        "pagination",
        "load-more",
        "export-csv",
        "export-excel"
      ],
      "headerToolbar": [
        {
          "type": "columns-toggler"
        },
        "filter-toggler",
        "reload",
        "bulkActions",
        {
          "align": "right",
          "type": "drag-toggler"
        },
        {
          "actionType": "dialog",
          "align": "right",
          "dialog": {
            "body": {
              "api": "post:/api/v1/system/model/admin.auth.permission/create",
              "body": [
                {
                  "label": "名称",
                  "name": "name",
                  "required": true,
                  "type": "input-text"
                },
                {
                  "label": "描述",
                  "name": "desc",
                  "required": true,
                  "type": "input-text"
                },
                {
                  "label": "上级",
                  "name": "parent",
                  "type": "tree-select",
                  "source": "/api/v1/system/tree/admin.auth.permission/find?_label=desc"
                },
                {
                  "label": "菜单",
                  "name": "menus",
                  "searchable": true,
                  "multiple": true,
                  "type": "tree-select",
                  "labelField": "title",
                  "valueField": "id",
                  "autoCheckChildren": false,
                  "joinValues": false,
                  "extractValue": true,
                  "source": "/api/v1/system/tree/admin.menu/find?_label=title"
                },
                {
                  "name": "routes",
                  "type": "combo",
                  "label": "路由",
                  "multiple": true,
                  "items": [
                    {
                      "name": "route",
                      "type": "select",
                      "joinValues": false,
                      "extractValue": true,
                      "unique": true,
                      "source": "/api/v1/system/model/system.api/select_options?_label=router&_value=router"
                    },
                    {
                      "type": "checkboxes",
                      "name": "operation",
                      "label": "请求方式",
                      "disabledOn": "!this.route",
                      "options": [
                        {
                          "value": "GET",
                          "label": "GET"
                        },
                        {
                          "value": "POST",
                          "label": "POST"
                        },
                        {
                          "value": "PUT",
                          "label": "PUT"
                        },
                        {
                          "value": "DELETE",
                          "label": "DELETE"
                        },
                        {
                          "value": "PATCH",
                          "label": "PATCH"
                        },
                        {
                          "value": "OPTIONS",
                          "label": "OPTIONS"
                        },
                        {
                          "value": "HEAD",
                          "label": "HEAD"
                        }
                      ],
                      "description": "不选则为ANY",
                      "joinValues": false,
                      "extractValue": true
                    }
                  ]
                },
                {
                  "name": "models",
                  "type": "combo",
                  "label": "模型",
                  "multiple": true,
                  "items": [
                    {
                      "name": "model",
                      "type": "select",
                      "joinValues": false,
                      "extractValue": true,
                      "unique": true,
                      "source": "/api/v1/system/model/ddic.model/select_options?_value=identity&_label=name"
                    },
                    {
                      "type": "checkboxes",
                      "name": "operation",
                      "disabledOn": "!this.model",
                      "options": [
                        {
                          "label": "读取",
                          "value": "READ"
                        },
                        {
                          "label": "修改",
                          "value": "UPDATE"
                        },
                        {
                          "label": "创建",
                          "value": "CREATE"
                        },
                        {
                          "label": "删除",
                          "value": "DELETE"
                        }
                      ],
                      "description": "不选则为ANY",
                      "joinValues": false,
                      "extractValue": true
                    }
                  ]
                },
                {
                  "name": "folders",
                  "type": "combo",
                  "label": "文件目录",
                  "multiple": true,
                  "items": [
                    {
                      "name": "folder",
                      "searchable": true,
                      "type": "tree-select",
                      "autoCheckChildren": false,
                      "joinValues": false,
                      "extractValue": true,
                      "source": "/api/v1/fs/file/permission_tree",
                      "unique": true
                    },
                    {
                      "type": "checkboxes",
                      "name": "operation",
                      "disabledOn": "!this.folder",
                      "options": [
                        {
                          "label": "读取",
                          "value": "READ"
                        },
                        {
                          "label": "修改",
                          "value": "UPDATE"
                        },
                        {
                          "label": "创建",
                          "value": "CREATE"
                        },
                        {
                          "label": "删除",
                          "value": "DELETE"
                        }
                      ],
                      "description": "不选则为ANY",
                      "joinValues": false,
                      "extractValue": true
                    }
                  ]
                }
              ],
              "name": "create",
              "silentPolling": false,
              "type": "form"
            },
            "size": "lg",
            "title": "新增"
          },
          "icon": "fa fa-plus pull-left",
          "label": "新增",
          "level": "primary",
          "type": "button"
        }
      ],
      "itemActions": [],
      "keepItemSelectionOnPageChange": true,
      "perPage": 10,
      "primaryField": "id",
      "quickSaveItemApi": "post:/api/v1/system/model/admin.auth.permission/update/${id}",
      "syncLocation": false,
      "type": "crud"
    }
  ],
  "type": "page"
}
